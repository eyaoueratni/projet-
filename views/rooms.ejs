        <style>
           
            .room-square {
                width: 200px;
                height: 200px;
                margin: 20px;
                background-color: #f0f0f0;
                display: flex;
                align-items: center;
                justify-content: center;
                border: 2px solid #ccc;
                cursor: pointer;
                transition: background-color 0.3s, transform 0.3s;
                border-radius: 10px;
                font-family: Arial, sans-serif;
                font-size: 18px;
                color: #333;
            }
           
            .room-square:hover {
                background-color: #e0e0e0;
                transform: scale(1.05);
            }
            
            .room-container {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                margin-top: 50px;
            }
            
            h1 {
                text-align: center;
                color: #007bff;
                font-size: 36px;
                font-weight: bold;
                margin-bottom: 30px;
                text-transform: uppercase;
                letter-spacing: 2px;
            }
        </style>
    </head>
    <body>
 
    <div class="room-container">
        <% rooms.forEach(function(room) { %>
            <div class="room-square" onclick="location.href='/room/<%= room._id %>'">
                <span><%= room.name %></span>
            </div>
        <% }); %>
    </div>


    