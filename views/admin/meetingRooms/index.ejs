
             
              <%- include ('../parts/adminheader.ejs') %>
              <section class="about section-padding">
                  <div class="container">
                      <div class="row">
                          <div class="col-12 text-center">
                              <h2 class="mb-5">Meeting room <span> Dashboard </span> </h2>
                          </div>
                          <div class="btn-toolbar mb-2 mb-md-0">
                              <div class="btn-group me-2">
                                  <a href="/add/meetingRoom" class="btn btn-sm btn-outline-secondary">+ New Meeting Room</a>
                              </div>
                          </div>
                      </div>
                      <div class="table-responsive">
                          <table class="table table-striped table-sm">
                              <thead>
                                  <tr>
                                      <th scope="col">Name</th>
                                      <th scope="col">Floor</th>
                                      <th scope="col">Capacity</th>
                                      <th scope="col">Assets</th>
                                      <th scope="col">Availability</th>
                                      <th scope="col" class="text-end">Action</th>
                                  </tr>
                              </thead>
                              <tbody>
                                  <% if (meetingrooms.length > 0) { %>
                                      <% meetingrooms.forEach(room => { %>
                                          <tr class="align-middle">
                                              <td><%= room.name %></td>
                                              <td><%= room.floor %></td>
                                              <td><%= room.capacity %></td>
                                              <td><%= room.assets %></td>
                                              <td><%= room.availability ? 'Available' : 'Not Available' %></td>
                                              <td class="text-end">
                                                <div class="d-flex flex-row justify-content-end gap-2">
                                                  <a
                                                    href="/view/meetingRoom/<%=room._id %>"
                                                    class="btn btn-primary btn-small"
                                                  >
                                                    <i class="bi bi-eye"></i>
                                                  </a>
                                              </td>
                                          </tr>
                                      <% }); %>
                                  <% } else { %>
                                      <tr>
                                          <td colspan="6" class="text-center">No meeting rooms available</td>
                                      </tr>
                                  <% } %>
                              </tbody>
                          </table>
                      </div>
                  </div>
              </section>
              <%- include('../parts/adminfooter.ejs') %>
              